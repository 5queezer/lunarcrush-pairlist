{
  "include": ["jest.config.js", "src/**/*.ts"],
  "exclude": ["node_modules", "tests", "**/*.test.ts", "**/*.spec.ts"],
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "baseUrl": "./",
    "paths": {
      "@/*": ["src/*"]
    },
    "outDir": "dist",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true
  }
}
